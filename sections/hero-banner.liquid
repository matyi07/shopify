{% comment %}
  Hero banner section with dynamic animations and Nike swoosh
{% endcomment %}

<section class="hero-banner" id="hero-banner">
  <div class="hero-content">
    <div class="hero-text">
      <h1 class="hero-title">
        <span class="hero-title-line">{{ section.settings.hero_title | default: "JUST DO IT" }}</span>
      </h1>
      <p class="hero-subtitle">{{ section.settings.hero_subtitle | default: "Discover the latest Nike innovations designed to help you push your limits" }}</p>
      <div class="hero-actions">
        <a href="{{ section.settings.hero_cta_url | default: '/collections/new-releases' }}" class="btn cta-nike">{{ section.settings.hero_cta_text | default: "Shop Now" }}</a>
        <a href="/collections/sale" class="btn btn-secondary">Sale Items</a>
      </div>
    </div>
    <div class="hero-visual">
      <div class="hero-swoosh">
        <img src="{{ 'headpics.jpg' | asset_url }}" alt="Nike Swoosh" class="swoosh-image">
      </div>
      <div class="hero-particles"></div>
    </div>
  </div>
  <div class="hero-background"></div>
</section>

<style>
  .hero-banner {
    position: relative;
    height: 100vh;
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: linear-gradient(135deg, #000000 0%, #1a1a1a 100%);
    margin-top: 70px;
  }
  
  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    width: 100%;
    padding: 0 20px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }
  
  .hero-text {
    color: white;
  }
  
  .hero-title {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 900;
    line-height: 0.9;
    margin: 0 0 30px 0;
    overflow: hidden;
  }
  
  .hero-title-line {
    display: block;
    opacity: 0;
    animation: gentleFadeIn 1.2s ease-out 0.3s forwards;
  }
  
  .hero-subtitle {
    font-size: 1.2rem;
    margin: 0 0 40px 0;
    opacity: 0;
    animation: gentleFadeIn 1.2s ease-out 0.6s forwards;
  }
  
  .hero-actions {
    display: flex;
    gap: 20px;
    opacity: 0;
    animation: gentleFadeIn 1.2s ease-out 0.9s forwards;
  }
  
  .btn {
    display: inline-block;
    padding: 15px 30px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 30px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .cta-nike {
    background: #000000;
    color: #ffffff;
    font-family: 'Poppins', sans-serif;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    position: relative;
    overflow: hidden;
  }
  
  .cta-nike::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: #ff0000;
    transition: left 0.4s ease;
    z-index: -1;
  }
  
  .cta-nike:hover::before {
    left: 0;
  }
  
  .cta-nike:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(255, 0, 0, 0.3);
  }
  
  .btn-secondary {
    background: transparent;
    color: white;
    border: 2px solid white;
  }
  
  .btn-secondary:hover {
    background: white;
    color: #000;
  }
  
  .hero-visual {
    position: relative;
    height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .hero-swoosh {
    position: relative;
    z-index: 2;
    opacity: 0;
    animation: gentleFadeIn 1.5s ease-out 0.5s forwards;
  }
  
  .swoosh-image {
    width: 400px;
    height: auto;
    filter: drop-shadow(0 0 30px rgba(220, 20, 60, 0.5));
  }
  
  .hero-particles {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
  }
  
  .hero-particles::before,
  .hero-particles::after {
    content: '';
    position: absolute;
    width: 4px;
    height: 4px;
    background: #ff6b35;
    border-radius: 50%;
    opacity: 0.6;
    animation: particle 4s linear infinite;
  }
  
  .hero-particles::before {
    top: 20%;
    left: 20%;
    animation-delay: 0s;
  }
  
  .hero-particles::after {
    top: 60%;
    right: 30%;
    animation-delay: 2s;
  }
  
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="1" fill="rgba(255,255,255,0.1)"/></svg>');
    background-size: 50px 50px;
    animation: backgroundMove 20s linear infinite;
  }
  
  @keyframes gentleFadeIn {
    to {
      opacity: 1;
    }
  }
  
  @keyframes particle {
    0% { transform: translateY(0) rotate(0deg); opacity: 0; }
    10% { opacity: 1; }
    90% { opacity: 1; }
    100% { transform: translateY(-100vh) rotate(360deg); opacity: 0; }
  }
  
  @keyframes backgroundMove {
    0% { transform: translateX(0); }
    100% { transform: translateX(50px); }
  }
  
  @media (max-width: 768px) {
    .hero-content {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }
    
    .hero-visual {
      height: 300px;
    }
    
    .swoosh-image {
      width: 250px;
    }
    
    .hero-actions {
      flex-direction: column;
      align-items: center;
    }
    
    .btn {
      width: 200px;
      text-align: center;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "JUST DO IT"
    },
    {
      "type": "textarea",
      "id": "hero_subtitle",
      "label": "Hero Subtitle",
      "default": "Discover the latest Nike innovations designed to help you push your limits"
    },
    {
      "type": "url",
      "id": "hero_cta_url",
      "label": "Hero CTA URL",
      "default": "/collections/new-releases"
    },
    {
      "type": "text",
      "id": "hero_cta_text",
      "label": "Hero CTA Text",
      "default": "Shop Now"
    },
    {
      "type": "image_picker",
      "id": "hero_background_image",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Nike"
    }
  ]
}
{% endschema %}