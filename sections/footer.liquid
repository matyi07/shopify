<style>
  .footer {
    background: #000;
    color: white;
    padding: 60px 0 20px;
    margin-top: 80px;
  }
  
  .footer-main {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 60px;
    margin-bottom: 40px;
  }
  
  .footer-brand {
    max-width: 300px;
  }
  
  .footer-logo {
    margin-bottom: 15px;
  }
  
  .footer-swoosh {
    width: 50px;
    height: auto;
    filter: invert(1);
  }
  
  .footer-tagline {
    font-size: 1.2rem;
    font-weight: 700;
    margin: 0 0 15px 0;
    color: #ff6b35;
  }
  
  .footer-description {
    font-size: 0.9rem;
    line-height: 1.5;
    color: #ccc;
    margin: 0 0 25px 0;
  }
  
  .footer-social {
    display: flex;
    gap: 15px;
  }
  
  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: white;
    transition: all 0.3s ease;
  }
  
  .social-link:hover {
    background: #ff6b35;
    transform: translateY(-2px);
  }
  
  .footer-links {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
  }
  
  .footer-title {
    font-size: 1.1rem;
    font-weight: 700;
    margin: 0 0 20px 0;
    color: white;
  }
  
  .footer-menu {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .footer-menu li {
    margin-bottom: 10px;
  }
  
  .footer-menu a {
    color: #ccc;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }
  
  .footer-menu a:hover {
    color: #ff6b35;
  }
  
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 20px;
    border-top: 1px solid #333;
  }
  
  .footer-legal {
    display: flex;
    align-items: center;
    gap: 30px;
  }
  
  .footer-legal p {
    margin: 0;
    font-size: 0.8rem;
    color: #999;
  }
  
  .footer-legal-links {
    display: flex;
    gap: 20px;
  }
  
  .footer-legal-links a {
    color: #999;
    text-decoration: none;
    font-size: 0.8rem;
    transition: color 0.3s ease;
  }
  
  .footer-legal-links a:hover {
    color: #ff6b35;
  }
  
  .country-selector {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9rem;
    color: #ccc;
    cursor: pointer;
  }
  
  .country-selector:hover {
    color: #ff6b35;
  }
  
  @media (max-width: 768px) {
    .footer {
      padding: 40px 0 20px;
    }
    
    .footer-main {
      grid-template-columns: 1fr;
      gap: 40px;
    }
    
    .footer-links {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
    }
    
    .footer-bottom {
      flex-direction: column;
      gap: 20px;
      text-align: center;
    }
    
    .footer-legal {
      flex-direction: column;
      gap: 15px;
    }
    
    .footer-legal-links {
      justify-content: center;
    }
  }
  
  @media (max-width: 480px) {
    .footer-links {
      grid-template-columns: 1fr;
      gap: 25px;
    }
    
    .footer-legal-links {
      flex-direction: column;
      gap: 10px;
    }
  }
</style>