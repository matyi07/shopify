{% comment %}
  Soccer Collection Template - Nike Style
{% endcomment %}

<div class="collection-hero">
  <div class="container">
    <div class="collection-hero-content">
      <h1 class="collection-title">{{ collection.title }}</h1>
      <p class="collection-description">
        {{ collection.description | default: "Master the beautiful game with Nike's premium soccer collection. From boots to kits, play like the pros worldwide." }}
      </p>
      <div class="collection-stats">
        <span class="product-count">{{ collection.products.size }} Products</span>
        <span class="divider">|</span>
        <span class="new-arrivals">Match Ready</span>
      </div>
    </div>
  </div>
</div>

<div class="collection-filters">
  <div class="container">
    <div class="filter-bar">
      <div class="filter-group">
        <button class="filter-btn active" data-filter="all">All Soccer</button>
        <button class="filter-btn" data-filter="boots">Boots</button>
        <button class="filter-btn" data-filter="jerseys">Jerseys</button>
        <button class="filter-btn" data-filter="accessories">Accessories</button>
        <button class="filter-btn" data-filter="training">Training</button>
      </div>
      <div class="sort-group">
        <select class="sort-select">
          <option value="best-selling">Best Selling</option>
          <option value="performance">Performance</option>
          <option value="price-low-high">Price: Low to High</option>
          <option value="price-high-low">Price: High to Low</option>
          <option value="newest">Newest</option>
        </select>
      </div>
    </div>
  </div>
</div>

<div class="collection-grid">
  <div class="container">
    <div class="products-grid">
      {% for product in collection.products %}
        <div class="product-card" data-category="{{ product.tags | join: ',' | downcase }}">
          <div class="product-image-wrapper">
            {% if product.featured_image %}
              <img 
                src="{{ product.featured_image | img_url: '400x400' }}" 
                alt="{{ product.title }}"
                class="product-image"
                loading="lazy"
              >
            {% else %}
              <div class="product-image-placeholder">
                <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <path d="M8 14s1.5 2 4 2 4-2 4-2"></path>
                  <line x1="9" y1="9" x2="9.01" y2="9"></line>
                  <line x1="15" y1="9" x2="15.01" y2="9"></line>
                </svg>
              </div>
            {% endif %}
            
            <div class="product-overlay">
              <a href="{{ product.url }}" class="product-quick-view">Quick View</a>
              <div class="product-actions">
                <button class="wishlist-btn" aria-label="Add to wishlist">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                  </svg>
                </button>
                <button class="pitch-btn" aria-label="Pitch info">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="M8 14s1.5 2 4 2 4-2 4-2"></path>
                    <line x1="9" y1="9" x2="9.01" y2="9"></line>
                    <line x1="15" y1="9" x2="15.01" y2="9"></line>
                  </svg>
                </button>
              </div>
            </div>
          </div>
          
          <div class="product-info">
            <h3 class="product-title">
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h3>
            <p class="product-category">{{ product.type }}</p>
            <div class="product-price">
              {% if product.compare_at_price > product.price %}
                <span class="price-sale">${{ product.price | money_without_currency }}</span>
                <span class="price-compare">${{ product.compare_at_price | money_without_currency }}</span>
              {% else %}
                <span class="price">${{ product.price | money_without_currency }}</span>
              {% endif %}
            </div>
            
            {% if product.available %}
              <div class="product-features">
                <span class="feature-tag">Control</span>
                <span class="feature-tag">Touch</span>
                <span class="feature-tag">Precision</span>
              </div>
            {% else %}
              <span class="sold-out">Sold Out</span>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
    
    {% if collection.products.size == 0 %}
      <div class="empty-collection">
        <div class="empty-icon">
          <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
            <circle cx="12" cy="12" r="10"></circle>
            <path d="M8 14s1.5 2 4 2 4-2 4-2"></path>
            <line x1="9" y1="9" x2="9.01" y2="9"></line>
            <line x1="15" y1="9" x2="15.01" y2="9"></line>
          </svg>
        </div>
        <h2>No products found</h2>
        <p>This collection is currently empty. Check back soon for new soccer gear!</p>
        <a href="{{ routes.root_url }}" class="btn btn-primary">Continue Shopping</a>
      </div>
    {% endif %}
  </div>
</div>

<div class="collection-features">
  <div class="container">
    <div class="features-grid">
      <div class="feature-card">
        <div class="feature-icon">
          <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <path d="M8 14s1.5 2 4 2 4-2 4-2"></path>
            <line x1="9" y1="9" x2="9.01" y2="9"></line>
            <line x1="15" y1="9" x2="15.01" y2="9"></line>
          </svg>
        </div>
        <h3>Ball Control</h3>
        <p>Enhanced touch and precision</p>
      </div>
      
      <div class="feature-card">
        <div class="feature-icon">
          <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"></path>
          </svg>
        </div>
        <h3>Speed</h3>
        <p>Lightweight design for quick acceleration</p>
      </div>
      
      <div class="feature-card">
        <div class="feature-icon">
          <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
        </div>
        <h3>All Surfaces</h3>
        <p>Optimized for every playing surface</p>
      </div>
    </div>
  </div>
</div>

<style>
  .collection-hero {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
    color: white;
    padding: 100px 0 60px;
    text-align: center;
  }
  
  .collection-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 900;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }
  
  .collection-description {
    font-size: 1.2rem;
    max-width: 600px;
    margin: 0 auto 30px;
    line-height: 1.6;
    color: rgba(255,255,255,0.9);
  }
  
  .collection-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    font-size: 1rem;
    color: rgba(255,255,255,0.8);
  }
  
  .divider {
    color: rgba(255,255,255,0.5);
  }
  
  .collection-filters {
    background: #f8f8f8;
    padding: 30px 0;
    border-bottom: 1px solid #eee;
  }
  
  .filter-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
  }
  
  .filter-group {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
  }
  
  .filter-btn {
    background: none;
    border: 2px solid #ddd;
    padding: 10px 20px;
    border-radius: 25px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 500;
    color: #333;
  }
  
  .filter-btn:hover,
  .filter-btn.active {
    background: #2c3e50;
    color: white;
    border-color: #2c3e50;
  }
  
  .sort-select {
    padding: 10px 15px;
    border: 2px solid #ddd;
    border-radius: 25px;
    background: white;
    font-size: 14px;
    cursor: pointer;
  }
  
  .collection-grid {
    padding: 60px 0;
  }
  
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 40px;
  }
  
  .product-card {
    background: white;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    transition: all 0.4s ease;
    cursor: pointer;
  }
  
  .product-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
  }
  
  .product-image-wrapper {
    position: relative;
    height: 280px;
    overflow: hidden;
  }
  
  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }
  
  .product-card:hover .product-image {
    transform: scale(1.1);
  }
  
  .product-image-placeholder {
    width: 100%;
    height: 100%;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ccc;
  }
  
  .product-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.7);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .product-card:hover .product-overlay {
    opacity: 1;
  }
  
  .product-quick-view {
    background: white;
    color: #000;
    padding: 12px 24px;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    text-transform: uppercase;
    margin-bottom: 15px;
    transform: translateY(20px);
    transition: all 0.3s ease;
  }
  
  .product-card:hover .product-quick-view {
    transform: translateY(0);
  }
  
  .product-actions {
    display: flex;
    gap: 15px;
  }
  
  .wishlist-btn,
  .pitch-btn {
    background: rgba(255,255,255,0.2);
    border: none;
    color: white;
    padding: 10px;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .wishlist-btn:hover,
  .pitch-btn:hover {
    background: #2c3e50;
  }
  
  .product-info {
    padding: 25px;
  }
  
  .product-title {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 8px;
  }
  
  .product-title a {
    color: #000;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .product-title a:hover {
    color: #2c3e50;
  }
  
  .product-category {
    color: #666;
    font-size: 0.9rem;
    margin-bottom: 12px;
  }
  
  .product-price {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 15px;
  }
  
  .price,
  .price-sale {
    font-size: 1.3rem;
    font-weight: 700;
    color: #000;
  }
  
  .price-compare {
    font-size: 1.1rem;
    color: #999;
    text-decoration: line-through;
  }
  
  .product-features {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }
  
  .feature-tag {
    background: #2c3e50;
    color: white;
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 0.8rem;
    font-weight: 500;
  }
  
  .sold-out {
    color: #2c3e50;
    font-weight: 600;
    font-size: 0.9rem;
  }
  
  .empty-collection {
    text-align: center;
    padding: 80px 20px;
    color: #666;
  }
  
  .empty-icon {
    margin-bottom: 30px;
    opacity: 0.5;
  }
  
  .empty-collection h2 {
    font-size: 2rem;
    margin-bottom: 15px;
    color: #000;
  }
  
  .empty-collection p {
    font-size: 1.1rem;
    margin-bottom: 30px;
  }
  
  .collection-features {
    background: #f8f8f8;
    padding: 60px 0;
  }
  
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
  }
  
  .feature-card {
    text-align: center;
    padding: 30px;
    background: white;
    border-radius: 15px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
  }
  
  .feature-card:hover {
    transform: translateY(-5px);
  }
  
  .feature-icon {
    margin-bottom: 20px;
    color: #2c3e50;
  }
  
  .feature-card h3 {
    font-size: 1.3rem;
    margin-bottom: 10px;
    color: #000;
  }
  
  .feature-card p {
    color: #666;
    line-height: 1.5;
  }
  
  @media (max-width: 768px) {
    .collection-hero {
      padding: 80px 0 40px;
    }
    
    .filter-bar {
      flex-direction: column;
      align-items: stretch;
    }
    
    .filter-group {
      justify-content: center;
    }
    
    .products-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 30px;
    }
    
    .features-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }
  }
</style>